@model IEnumerable<EnrollmentDto>

@{
    ViewData["Title"] = "Enrollments";
}

<h2>Enrollments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Enrollment ID</th>
            <th>Kid</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.EnrollmentId</td>
                <td>@e.Kid?.Name</td>
                <td>@e.Course?.Title</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@e.EnrollmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">New Enrollment</a>
