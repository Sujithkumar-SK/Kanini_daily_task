@model EnrollmentDto

@{
    ViewData["Title"] = "New Enrollment";
}

<h2>New Enrollment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="KidId">Kid</label>
        <select asp-for="KidId" class="form-control" asp-items="@(new SelectList(ViewBag.Kids, "KidId", "Name"))"></select>
    </div>

    <div class="form-group">
        <label for="CourseId">Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.Courses, "CourseId", "Title"))"></select>

    </div>

    <button type="submit" class="btn btn-success">Enroll</button>
</form>
